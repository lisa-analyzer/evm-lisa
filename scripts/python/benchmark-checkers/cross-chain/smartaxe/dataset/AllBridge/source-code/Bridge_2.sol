abstract contract Router is Ownable, IRouter {
    // tokenId -> Pool
    mapping(bytes32 => Pool) public pools;

    function sendTokens(
        uint256 amount,
        bytes32 recipient,
        uint8 destinationChainId,
        bytes32 receiveToken,
        uint256 nonce,
        MessengerProtocol messenger
    ) virtual internal;

    function addPool(Pool pool, bytes32 token) external onlyOwner {
        pools[token] = pool;
    }

    function swapAndBridge(
        bytes32 token,
        uint256 amount,
        bytes32 recipient,
        uint8 destinationChainId,
        bytes32 receiveToken,
        uint256 nonce,
        MessengerProtocol messenger) external payable override
    {
        Pool tokenPool = pools[token];
        require(address(tokenPool) != address(0), "Router: no pool");
        uint256 vUsdAmount = tokenPool.swapToVUsd(msg.sender, amount);
        sendTokens(vUsdAmount, recipient, destinationChainId, receiveToken, nonce, messenger);
    }

    function receiveAndSwap(uint256 vUsdAmount, bytes32 token, address recipient) internal {
        Pool tokenPool = pools[token];
        require(address(tokenPool) != address(0), "Router: no pool");
        tokenPool.swapFromVUsd(recipient, vUsdAmount);
    }

    function swap(uint256 amount, bytes32 token, bytes32 receiveToken, address recipient) external {
        Pool tokenPool = pools[token];
        Pool receiveTokenPool = pools[receiveToken];
        require(address(tokenPool) != address(0), "Router: no pool");
        require(address(receiveTokenPool) != address(0), "Router: no pool");

        uint256 vUsdAmount = tokenPool.swapToVUsd(msg.sender, amount);
        receiveTokenPool.swapFromVUsd(recipient, vUsdAmount);
    }
}

