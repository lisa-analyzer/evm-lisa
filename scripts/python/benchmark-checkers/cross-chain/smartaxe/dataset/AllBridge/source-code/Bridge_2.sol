contract Bridge is GasUsage, Router, MessengerGateway, IBridge {
    using HashUtils for bytes32;

    uint8 public chainId;
    mapping(bytes32 => bool) public processedMessages;
    mapping(bytes32 => bool) public sentMessages;
    // Info about bridges and tokens on other chains
    mapping(uint8 => bytes32) public otherBridges;
    mapping(uint8 => mapping(bytes32 => bool)) public otherBridgeTokens;

    event TokensSent(
        uint256 amount,
        bytes32 recipient,
        uint8 destinationChainId,
        bytes32 receiveToken,
        uint256 nonce,
        MessengerProtocol messenger
    );
    event Received(address, uint256);

    constructor(
        uint8 _chainId,
        Messenger _allbridgeMessenger,
        WormholeMessenger _wormholeMessenger,
        IGasOracle _gasOracle
    )
        MessengerGateway(_allbridgeMessenger, _wormholeMessenger)
        GasUsage(_gasOracle)
    {
        chainId = _chainId;
    }

    function hashMessage(
        uint256 amount,
        bytes32 recipient,
        uint8 sourceChainId,
        uint8 destinationChainId,
        bytes32 receiveToken,
        uint256 nonce,
        MessengerProtocol messenger
    ) external pure returns (bytes32) {
        return keccak256(
            abi.encodePacked(
                amount,
                recipient,
                sourceChainId,
                receiveToken,
                nonce,
                messenger
            )
        ).replaceChainBytes(sourceChainId, destinationChainId);
    }

    function sendTokens(
        uint256 amount,
        bytes32 recipient,
        uint8 destinationChainId,
        bytes32 receiveToken,
        uint256 nonce,
        MessengerProtocol messenger
    ) internal override {
        uint8 sourceChainId = chainId; // Gas optimization
        require(
            destinationChainId != sourceChainId,
            "Bridge: wrong destination chain"
        );
        require(
            otherBridgeTokens[destinationChainId][receiveToken],
            "Bridge: unknown chain or token"
        );
        bytes32 message = this.hashMessage(
            amount,
            recipient,
            sourceChainId,
            destinationChainId,
            receiveToken,
            nonce,
            messenger
        );

        bool wasMessageSent;
        assembly {
            mstore(0x00, message)
            mstore(0x20, sentMessages.slot)
            let key := keccak256(0, 0x40)
            wasMessageSent := sload(key)
            sstore(key, true)
        } 
        require(!wasMessageSent, "Bridge: tokens already sent");
        
        uint256 bridgeTransactionCost = this.getTransactionCost(destinationChainId);
        uint256 messageTransactionCost = sendMessage(message, messenger);
        unchecked {
            require(
                msg.value >= bridgeTransactionCost + messageTransactionCost,
                "Bridge: not enough fee"
            );
        }
        emit TokensSent(
            amount,
            recipient,
            destinationChainId,
            receiveToken,
            nonce,
            messenger
        );
    }

    function receiveTokens(
        uint256 amount,
        bytes32 recipient,
        uint8 sourceChainId,
        bytes32 receiveToken,
        uint256 nonce,
        MessengerProtocol messenger
    ) external override {
        require(otherBridges[sourceChainId] != bytes32(0), "Bridge: source not registered");
        bytes32 messageWithSender = this.hashMessage(
            amount,
            recipient,
            sourceChainId,
            chainId,
            receiveToken,
            nonce,
            messenger
        ).hashWithSender(otherBridges[sourceChainId]);

        bool wasMessageProcessed;
        assembly {
            mstore(0x00, messageWithSender)
            mstore(0x20, processedMessages.slot)
            let key := keccak256(0, 0x40)
            wasMessageProcessed := sload(key)
            sstore(key, true)
        } 
        require(!wasMessageProcessed, "Bridge: message processed");

        require(this.hasReceivedMessage(messageWithSender, messenger), "Bridge: no message");

        receiveAndSwap(
            amount,
            receiveToken,
            address(uint160(uint256(recipient)))
        );
    }

    function withdrawGasTokens(uint256 amount) external onlyOwner {
        payable(msg.sender).transfer(amount);
    }

    function registerBridge(uint8 chainId_, bytes32 bridgeAddress_) external onlyOwner {
        otherBridges[chainId_] = bridgeAddress_;
    }

    function addBridgeToken(uint8 chainId_, bytes32 tokenAddress_) external onlyOwner {
        otherBridgeTokens[chainId_][tokenAddress_] = true;
    }

    function removeBridgeToken(uint8 chainId_, bytes32 tokenAddress_) external onlyOwner {
        otherBridgeTokens[chainId_][tokenAddress_] = false;
    }

    fallback() external payable {
        revert("Unsupported");
    }

    receive() external payable {
        emit Received(msg.sender, msg.value);
    }
}